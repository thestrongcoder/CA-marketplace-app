<h1>My Product List:</h1>
<div class="row">
  <p><%= link_to 'Add Product', new_product_path, class:"btn btn-dark" %>
</div>
<br>
  <div class="box">
  <div class="card-deck">
  <%if @products%>
    <% @products.each do |product| %>
      <div class="card" style="min-width:250px; max-width:500px;">
      <%= image_tag product.picture, class:"card-img-top", width: 120  if product.picture.attached? %>
      <div class="card-body">
      <h5 class="card-title"><%= link_to "#{product.name.capitalize}", product_path(product) %></h5>
      <p class="card-text">
        <p>Brand: <%= product.brand.brand %></p>
        <p>Category: <%= product.category.category %></p>
        <p>Condition: <%= product.condition %></p>
        <p>Price: <%= number_to_currency product.price %></p>
        <p><%= link_to 'Edit Product', edit_product_path(product), class:"btn btn-dark" %></p>
        <p><%= link_to 'Remove Product', product, method: "delete", class:"btn btn-dark" %></p>
    </p>
  </div>   
  <div class="card-footer">
      <small class="text-muted">Click for more details</small>
    </div>
    <% end %>
  </div>
  <%end%>
